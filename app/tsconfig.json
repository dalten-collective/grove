{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    // "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "noEmit": true,
    "jsx": "react-jsx",
    // "types": ["vite/client", "vitest/globals"],
    "paths": {
      "@/*": ["./src/modules/*"]
    }
  },
  "include": ["./src/modules"],
  "exclude": [
    "node_modules",
    "dist",
    "src/archive/app.jsx",
    "src/modules/main.tsx",
    "src/modules/main.jsx",
    "src/modules/main.js",
    "src/modules/state/index.js"
  ]
}
